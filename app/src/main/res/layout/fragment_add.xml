<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_news_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDD9CF"
    android:gravity="center"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/ajout_activite"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:minHeight="100dp"
        android:scrollbarSize="30dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message" />

    <Button
        android:id="@+id/button_recolte"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#DFDBDB"
        android:text="Récolter"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_arrosage"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <Button
        android:id="@+id/button_remise0"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:backgroundTint="#DFDBDB"
        android:text="Remise à 0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_désherbage"
        app:layout_constraintEnd_toStartOf="@+id/button_désherbage"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_désherbage"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#DFDBDB"
        android:text="Désherber"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_plantation" />

    <Button
        android:id="@+id/button_arrosage"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:backgroundTint="#DFDBDB"
        android:text="Arroser"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_recolte"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_plantation"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:backgroundTint="#DFDBDB"
        android:text="Planter"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_recolte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_recolte" />

    <Button
        android:id="@+id/button_validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:backgroundTint="#DFDBDB"
        android:text="@string/valider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>